{
  "name": "Auto Commit Changes",
  "description": "Automatically commit important file changes to git",
  "trigger": "fileChanged",
  "filePatterns": [
    "*.py",
    "*.js",
    "*.ts",
    "*.md",
    "*.json",
    "*.yaml",
    "*.yml"
  ],
  "script": {
    "language": "javascript",
    "content": "console.log('📝 File changed detected - preparing auto-commit...');\nconsole.log('Use: git add . && git commit -m \"Auto-commit: Updated files\" && git push');"
  }
}